{
    "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": [
      "node",
      "webpack-env"
    ],
    "rootDir": "src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["./*"],
      "@client/*": ["./client/*"],
      "@redux/*": [
        "client/redux/*"
      ],
      "@components/*": [
        "client/components/*"
      ]
    },
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true
    },
    "include": [
      "./src"
    ]
}
  