{
    "compilerOptions": {
    "typeRoots": ["./@types", "./node_modules/@types"],
    "types": [
      "node",
      "webpack-env"
    ],
    "rootDir": "src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["./*"],
      "@client/*": ["./client/*"],
      "@redux/*": [
        "client/redux/*"
      ],
      "@components/*": [
        "client/components/*"
      ],
      "@features/*": [
        "client/features/*"
      ],
      "@elements/*": [
        "client/elements/*"
      ],
      "@shared/*": [
        "client/shared/*"
      ]
    },
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
    },
    "include": [
       "./@types", "./src/**/*"
    ]
}

